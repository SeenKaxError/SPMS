@{
    ViewBag.Title = "Safety Patrol Monitoring System";
    Layout = "~/Views/Shared/_login.cshtml";
}

<div class="row">
<div class="col-md-4 col-md-offset-4" style="width: 300px;" id="loginbox">
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">
       @if (ViewBag.Message != "" && ViewBag.Message != null) 
        { 
        <div class="alert alert-danger alert-dismissable"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            @ViewBag.Message
        </div>
         }
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <fieldset>
                    <div class="form-group">
                        <input class="form-control" placeholder="Username / ID" name="username" type="" autofocus>
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Password" name="password" type="password" value="">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input name="remember" type="checkbox" value="Remember Me">Remember Me
                        </label>
                    </div>
                    <button class="btn btn-lg btn-success btn-block" type="submit">Login</button>
                </fieldset>
            }
        </div>
        <div class="panel-footer">
      <p class="text-center">
	  <small >PKI - MIS  &copy; @DateTime.Now.Year</small></br>
	  <small style="color:#e11;">@@seenkax_error</small>
	  </p>
        </div>
    </div>
</div>
</div>
