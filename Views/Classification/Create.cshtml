@model SafetyPatrol.Models.tbl_classification

@{
    ViewBag.Title = "Create";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="col-xs-12">
        <h1>Details</h1>
        @if (Int32.Parse(Session.Count.ToString()) > 0)
        {
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
            <li>@Html.ActionLink("Findings", "index", "Findings")</li>
            <li class="active"><i class="icon-file-alt"></i>Classifications</li>

        </ol>
        }
        </div>
        <div class="col-xs-12">
        
        @if (ViewBag.Message != null && ViewBag.Message  != "") 
        {
        <div class="alert alert-danger alert-dismissable"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            @ViewBag.Message
        </div>
         }
</div>
<div class="col-xs-12">

       <div class="panel panel-default">
              <div class="panel-heading"><h5>New Finding</h5></div>
              <div class="panel-body">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add New Classification</legend>
        <div class="form-group">
         
            @Html.LabelFor(model => model.classification)
        
            @Html.TextBoxFor(model => model.classification,   new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.classification)
         
        </div>

         <input type="submit" class="btn btn-primary" value="Create" />
         
    </fieldset>
}
</div>
<div class="panel-footer">

</div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
</div>
